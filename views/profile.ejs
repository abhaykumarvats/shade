<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- Title -->
    <title><%= username %> &middot; Profile | Shade</title>

    <!-- Bootstrap stylesheet -->
    <link rel="stylesheet" href="/public/css/bootstrap.min.css" />

    <!-- Profile stylesheet -->
    <link rel="stylesheet" href="/public/css/profile.css" />
  </head>
  <body>
    <!-- Username heading -->
    <h1 class="display-4 text-center"><%= username %></h1>

    <!-- Main navigation bar -->
    <nav id="main-nav">
      <!-- Navigation links -->
      <% if (type !== 'public') { %>
      <a href="/" class="nav-item">
        <span>Home</span>
      </a>
      <% } %>
      <a href="#" class="nav-item active" onclick="return false;">
        <span>Profile</span>
      </a>
      <% if (type !== 'public') { %>
      <a href="/logout" class="nav-item">
        <span>Log Out</span>
      </a>
      <% } else { %>
      <a href="/login" class="nav-item">
        <span>Log In</span>
      </a>
      <% } %>
    </nav>

    <!-- Profile navigation bar -->
    <nav id="profile-nav">
      <!-- Navigation links -->
      <a href="#" class="nav-item active" id="activity-tab">
        <span>Activity</span>
      </a>
      <% if (type !== 'public') { %>
      <a href="#" class="nav-item" id="connections-tab">
        <span>Connections</span>
      </a>
      <% } %>
      <a href="#" class="nav-item" id="about-tab">
        <span>About</span>
      </a>
    </nav>

    <!-- Main container -->
    <div id="main-container">
      <!-- Activity container -->
      <div id="activity-container">
        <% if (type === 'own') { %>
        <!-- Post form -->
        <form action="/<%= username %>/post" method="POST" id="post-form">
          <!-- Post textarea -->
          <div class="form-group">
            <textarea
              name="content"
              id="content"
              class="form-control"
              placeholder="Write something..."
              required
            ></textarea>
          </div>

          <!-- Post input group -->
          <div class="input-group">
            <!-- Post audience select -->
            <select
              name="audience"
              id="audience"
              class="custom-select custom-select-sm"
            >
              <option value="0" selected>Select an audience...</option>
              <option value="friends">Friends</option>
              <option value="family">Family</option>
              <option value="acquaintances">Acquaintances</option>
              <option value="public">Public</option>
            </select>

            <!-- Post button -->
            <div class="input-group-append">
              <button
                type="submit"
                class="btn btn-sm btn-outline-primary"
                id="post-button"
              >
                Post
              </button>
            </div>
          </div>
        </form>
        <% } %>
      </div>

      <!-- Connections container -->
      <div id="connections-container"></div>

      <!-- About container -->
      <div id="about-container">
        <% if (type === 'public') { %>
        <div class="alert alert-primary">
          Log in to connect with <strong><%= username %></strong>.
        </div>
        <% } %>
      </div>
    </div>

    <!-- jQuery script -->
    <script src="/public/js/jquery-3.3.1.min.js"></script>

    <!-- Profile script -->
    <% if (type === 'own') { %>
    <script src="/public/js/profile-own.js"></script>
    <% } else if (type === 'other') { %>
    <script src="/public/js/profile-other.js"></script>
    <% } else if (type === 'public') { %>
    <script src="/public/js/profile-public.js"></script>
    <% } %>
  </body>
</html>
