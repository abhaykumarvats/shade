<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- Title -->
    <title><%= username %> &middot; Profile | Shade</title>

    <!-- Bootstrap stylesheet -->
    <link rel="stylesheet" href="/public/css/bootstrap.min.css" />

    <!-- Profile stylesheet -->
    <link rel="stylesheet" href="/public/css/profile.css" />
  </head>
  <body>
    <!-- Modals for 'own' profile view -->
    <% if (type === 'own') { %>
    <!-- Username change modal -->
    <div class="modal fade" id="username-change-modal" tabindex="-1">
      <!-- Modal dialog -->
      <div class="modal-dialog modal-dialog-centered modal-sm">
        <!-- Modal content -->
        <div class="modal-content">
          <!-- Modal header -->
          <div class="modal-header">
            <!-- Modal title -->
            <h5 class="modal-title">Change Username</h5>

            <!-- Close button -->
            <button type="button" class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <!-- Username change form -->
            <form
              action="/<%= username %>/change/username"
              method="POST"
              id="username-change-form"
            >
              <!-- Form group -->
              <div class="form-group">
                <!-- Label group -->
                <div id="label-group">
                  <!-- New username label -->
                  <label for="new-username">New Username</label>

                  <!-- New username small text -->
                  <small id="new-username-small-text" class="form-text"></small>
                </div>

                <!-- Input group -->
                <div class="input-group">
                  <!-- New username input -->
                  <input
                    type="text"
                    name="new_username"
                    class="form-control form-control-sm"
                    id="new-username"
                    placeholder="Enter new username"
                  />

                  <!-- 'Save' submit button -->
                  <div class="input-group-append">
                    <button type="submit" class="btn btn-sm btn-primary">
                      Save
                    </button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Password change modal -->
    <div class="modal fade" id="password-change-modal" tabindex="-1">
      <!-- Modal dialog -->
      <div class="modal-dialog modal-dialog-centered modal-sm">
        <!-- Modal content -->
        <div class="modal-content">
          <!-- Modal header -->
          <div class="modal-header">
            <!-- Modal title -->
            <h5 class="modal-title">Change Password</h5>

            <!-- Close button -->
            <button type="button" class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <!-- Password change form -->
            <form
              action="/<%= username %>/change/password"
              method="POST"
              id="password-change-form"
            >
              <!-- Old password form group -->
              <div class="form-group">
                <!-- Old password label group -->
                <div id="label-group">
                  <!-- Old password label -->
                  <label for="old-password">Old Password</label>

                  <!-- Old password small text -->
                  <small id="old-password-small-text" class="form-text"></small>
                </div>

                <!-- Old password input -->
                <input
                  type="password"
                  name="old_password"
                  id="old-password"
                  class="form-control form-control-sm"
                  placeholder="Enter old password"
                />
              </div>

              <!-- New password form group -->
              <div class="form-group">
                <!-- New password label group -->
                <div id="label-group">
                  <!-- New password label -->
                  <label for="new-password">New Password</label>

                  <!-- New password small text -->
                  <small id="new-password-small-text" class="form-text"></small>
                </div>

                <!-- New password input -->
                <input
                  type="password"
                  name="new_password"
                  class="form-control form-control-sm"
                  id="new-password"
                  placeholder="Enter new password"
                />
              </div>

              <!-- 'Save' submit button -->
              <button type="submit" class="btn btn-sm btn-primary">
                Save
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% } %>

    <!-- Username heading -->
    <h1 class="display-4 text-center" id="username"><%= username %></h1>

    <!-- Main navigation bar -->
    <nav id="main-nav">
      <!-- Navigation links -->
      <% if (type !== 'public') { %>
      <a href="/" class="nav-item">
        <span>Home</span>
      </a>
      <% } %>
      <a href="#" class="nav-item active" onclick="return false;">
        <span>Profile</span>
      </a>
      <% if (type !== 'public') { %>
      <a href="/logout" class="nav-item">
        <span>Log Out</span>
      </a>
      <% } else { %>
      <a href="/login" class="nav-item">
        <span>Log In</span>
      </a>
      <% } %>
    </nav>

    <!-- Profile navigation bar -->
    <nav id="profile-nav">
      <!-- Navigation links -->
      <a href="#" class="nav-item active" id="activity-tab">
        <span>Activity</span>
      </a>
      <% if (type !== 'public') { %>
      <a href="#" class="nav-item" id="connections-tab">
        <span>Connections</span>
      </a>
      <% } %>
      <a href="#" class="nav-item" id="about-tab">
        <span>About</span>
      </a>
    </nav>

    <!-- Main container -->
    <div id="main-container">
      <!-- Activity container -->
      <div id="activity-container">
        <% if (type === 'own') { %>
        <!-- Post form -->
        <form action="/<%= username %>/post" method="POST" id="post-form">
          <!-- Post textarea -->
          <div class="form-group">
            <textarea
              name="content"
              id="content"
              class="form-control"
              placeholder="Write something..."
            ></textarea>
          </div>

          <!-- Post input group -->
          <div class="input-group">
            <!-- Post audience select -->
            <select
              name="audience"
              id="audience"
              class="custom-select custom-select-sm"
            >
              <option value="0" selected>Select an audience...</option>
              <option value="friends">Friends</option>
              <option value="family">Family</option>
              <option value="acquaintances">Acquaintances</option>
              <option value="public">Public</option>
            </select>

            <!-- Post button -->
            <div class="input-group-append">
              <button
                type="submit"
                class="btn btn-sm btn-primary"
                id="post-button"
              >
                Post
              </button>
            </div>
          </div>
        </form>

        <!-- Horizontal line -->
        <hr />
        <% } %>
      </div>

      <!-- Connections container -->
      <div id="connections-container"></div>

      <!-- About container -->
      <div id="about-container">
        <% if (type === 'own') { %>
        <!-- About info list -->
        <div class="list-group" id="about-list"></div>

        <!-- About small text -->
        <p class="text-right"><small>Click on a field to change.</small></p>

        <% } else if (type === 'public') { %>
        <!-- Primary alert box -->
        <div class="alert alert-primary">
          Log in to connect with <strong><%= username %></strong>.
        </div>
        <% } %>
      </div>
    </div>

    <!-- jQuery script -->
    <script src="/public/js/jquery-3.3.1.min.js"></script>

    <% if (type === 'own') { %>
    <!-- Bootstrap script -->
    <script src="/public/js/bootstrap.min.js"></script>

    <!-- Own profile script -->
    <script src="/public/js/profile-own.js"></script>

    <% } else if (type === 'other') { %>
    <!-- Other profile script -->
    <script src="/public/js/profile-other.js"></script>

    <% } else if (type === 'public') { %>
    <!-- Public profile script -->
    <script src="/public/js/profile-public.js"></script>
    <% } %>
  </body>
</html>
